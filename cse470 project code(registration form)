from tkinter import*
from tkinter import ttk
root=Tk()
root.geometry("1199x600+100+50")
def getvalues():
    print("GRANTED")
Label(root,text="User Registration Form", font= "ar 15 bold").grid(row=0,column=3)
nm=Label(root, text="Owners Name:")
phn=Label(root, text="Owners Contact Number:")
atype=Label(root, text="Animal Type:")
emrgncy=Label(root, text="Emergency Issue:")
email=Label(root, text="Owners Email Address:")
passw=Label(root, text="Password:")

nm.grid(row=1,column=2)
phn.grid(row=2,column=2)
atype.grid(row=3,column=2)
emrgncy.grid(row=4,column=2)
email.grid(row=5,column=2)
passw.grid(row=6,column=2)


nmvalue=StringVar
phnvalue=StringVar
atypevalue=StringVar
emrgncyvalue=StringVar
emailvalue=StringVar
passwvalue=StringVar
Checkval=IntVar


nmentry=Entry(root, textvariable=nmvalue)
phnentry=Entry(root, textvariable=phnvalue)
atypeentry=Entry(root, textvariable=atypevalue)
emrgncyentry=Entry(root, textvariable=emrgncyvalue)
emailentry=Entry(root, textvariable=emailvalue)
passwentry=Entry(root, textvariable=passwvalue)

nmentry.grid(row=1,column=3)
phnentry.grid(row=2,column=3)
atypeentry.grid(row=3,column=3)
emrgncyentry.grid(row=4,column=3)
emailentry.grid(row=5,column=3)
passwentry.grid(row=6,column=3)


Checkbox=Checkbutton(text="Remember Me", variable=Checkval)
Checkbox.grid(row=7,column=3)

Button(text="Submit", command=getvalues).grid(row=9,column=3)

root.mainloop()
